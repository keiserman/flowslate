---
import Layout from "../layouts/Layout.astro";
import ComponentList from "../components/ComponentList.astro";
---

<Layout title="Components">
  <section class="section">
    <div class="padding-global">
      <div class="container">
        <div class="max-w-screen-sm">
          <h1 class="mb-6">Explore the library</h1>
          <p class="mb-8 text-gray-600">
            Search for the component you want to copy and paste into your
            Webflow project. Before you start be sure to add the style guide so
            all of the classes sync up.
          </p>
        </div>
        <ComponentList />
      </div>
    </div>
  </section>
</Layout>
