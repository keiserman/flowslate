---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Flowslate">
  <Header />
  <main>
    <section class="py-28 bg-white">
      <div class="container">
        <div class="max-w-screen-sm m-auto text-center mb-28">
          <h1 class="mb-6">Clean slate for your next webflow project</h1>
          <p class="mb-8 text-xl text-zinc-600">
            A curated library of beautifully crafted Webflow components to
            elevate your web design.
          </p>
          <div class="flex items-center justify-center gap-3">
            <a href="#" class="button is-primary">Sign up for free</a>
            <a href="/library" class="button">Explore the library</a>
          </div>
        </div>
        <img src="" alt="" class="bg-zinc-100 aspect-video rounded-lg" />
      </div>
    </section>
  </main>
  <Footer />
</Layout>
