---
import Layout from "./Layout.astro";
import { Image } from "astro:assets";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <section class="py-20">
    <div class="container">
      <h1 class="mb-6">{frontmatter.title}</h1>
      <Image
        src={frontmatter.image.src}
        alt="A description of my image."
        width="1200"
        height="400"
        class="bg-gray-100 p-4 rounded-lg aspect-video object-contain object-top"
      />
      <slot />
    </div>
  </section>
</Layout>
