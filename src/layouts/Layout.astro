---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/dm-sans";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main><slot /></main>
    <Footer />
  </body>
</html>
<style is:global>
  h1 {
    @apply text-5xl md:text-6xl font-semibold;
  }

  .container {
    @apply max-w-screen-xl m-auto px-6;
  }

  .nav-link {
    @apply text-zinc-700 py-1 px-2 rounded-lg transition hover:text-zinc-900 hover:bg-zinc-100;
  }

  .button {
    @apply px-4 py-2 border text-zinc-700 border-zinc-300 rounded-lg shadow-sm hover:bg-zinc-100 transition;
  }

  .button.is-primary {
    @apply bg-zinc-900 border-zinc-900 text-white hover:bg-zinc-800 hover:border-zinc-800;
  }
</style>
