---
import Button from "./Button.astro";
---

<header class="w-full border-b border-gray-300 bg-white z-50">
  <div class="padding-global">
    <div class="container py-6 flex justify-between items-center">
      <a href="/" class="text-xl font-semibold">FlowSlate</a>
      <div id="nav-menu" class="md:block hidden">
        <div
          class="md:flex md:flex-row md:bg-transparent md:relative md:top-0 md:p-0 gap-4 md:items-center flex flex-col absolute top-20 right-0 p-6 rounded-lg w-full bg-gray-50"
        >
          <a href="/" class="nav-link">Home</a>
          <a href="/components" class="nav-link">Components</a>
          <a href="/" class="nav-link">About</a>
          <a href="/" class="nav-link">Pricing</a>
          <a href="/" class="nav-link">Contact</a>
          <Button text="Login" variant="secondary" />
        </div>
      </div>
      <div id="hamburger" class="flex flex-col gap-1.5 md:hidden z-50">
        <span class="w-6 h-0.5 bg-black"></span>
        <span class="w-6 h-0.5 bg-black"></span>
        <span class="w-6 h-0.5 bg-black"></span>
      </div>
    </div>
  </div>
</header>
<script>
  const navMenu = document.querySelector("#nav-menu");
  const hamburger = document.querySelector("#hamburger");

  hamburger?.addEventListener("click", () => {
    navMenu?.classList.toggle("hidden");
  });
</script>
